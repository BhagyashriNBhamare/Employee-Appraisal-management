  <div>
      <h1 align="center">Employee Information</h1>
      <% if (locals.err) {%>
      <center>
      <table class="container">
      <tr>
        <th>Employee-ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Salary</th>
        <th>Delete</th>
      </tr>
       <%  data.forEach(function(data){%>
        <tr>
            <td><%=data.id %></td>
            <td><%=data.fname %></td>
            <td><%=data.lname %></td>
            <td><%=data.salary %></td>
            <td>
                  <form method="post" action="/del/<%= data.id %>">
                    <button type="submit" name="delete" class="btn btn-outline-danger">Delete</button>
                  </form>
            </td>
       
        </tr>
        <%  }); %>
      </table>
      </center>
             <% } %>

    <% if (locals.corr) { %>
        <h2>No Employee Information Avaliable </h2>
      <% } %>
  </div>
