</div>
  <div>
      <h1 align="center">Employee Rating</h1>
      <% if (locals.err) {%>
      <center>
      <table >
      <tr>
        <th>id</th>
        <th>name</th>
        <th>salary</th>
        <th>rating</th>
        <th>post</th>
        <th>avaliable</th>
        <th>unavaliable</th>
      </tr>
       <%  data.forEach(function(data){%>
        <tr>
            <td><%=data.id %></td>
            <td><%=data.fname %></td>
            <td><%=data.salary %></td>
            <form method="post" action="/delete/<%= data.id %>">
            <td> <input type="text" id="mid" name="mid" required><br></td>
            <td>
                    <button type="submit" name="delete" class="btn btn-outline-danger">post</button>
                  
            </td>
            </form>
            <td>
                  <form method="post" action="/delete1/<%= data.id %>">
                    <button type="submit" name="delete" class="btn btn-outline-danger">visible</button>
                  </form>
            </td>
            <td>
                  <form method="post" action="/delete2/<%= data.id %>">
                    <button type="submit" name="delete" class="btn btn-outline-danger">not visible </button>
                  </form>
            </td>
        </tr>
        <%  }); %>
      </table>
      </center>
             <% } %>

    <% if (locals.corr) { %>
        <h2>no request yet </h2>
      <% } %>
  </div>
